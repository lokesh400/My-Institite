<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">   
     <title>Student Result Portal</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">   
     <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://ai-public.creatie.ai/gen_page/tailwind-custom.css" rel="stylesheet">    
    <script src="https://cdn.tailwindcss.com/3.4.5?plugins=forms@0.5.7,typography@0.5.13,aspect-ratio@0.4.2,container-queries@0.1.1"></script>
    <script src="https://ai-public.creatie.ai/gen_page/tailwind-config.min.js" data-color="#000000" data-border-radius="small"></script>
</head>
<body class="min-h-screen bg-gray-50 font-['Inter']">
    <nav class="bg-gradient-to-r from-custom to-indigo-600 shadow-lg">        
        <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-center h-16">
                <div class="flex items-center space-x-3">                    
                    <h1 class="text-xl font-bold text-white">Check Your Result</h1>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8">       
         <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="p-8">
                <div class="text-center mb-8">                    
                    <h2 class="text-2xl font-bold text-gray-900">Find Your Academic Results</h2>
                    <p class="mt-2 text-gray-600">Enter your credentials to access your examination results</p>
                </div>

                <form method="GET" action="/view-result" class="space-y-6">                  
                      <div class="relative">
                        <label for="rollNumber" class="block text-sm font-medium text-gray-700 mb-1">                           
                             <i class="fas fa-id-card mr-2 text-custom"></i>Roll Number
                        </label>
                        <input type="text" 
                               id="rollNumber" 
                               name="rollNumber" 
                               class="block w-full border-gray-300 focus:ring-custom focus:border-custom !rounded-button"
                               placeholder="Enter your roll number"
                               required>                    
                            </div>

                    <div class="relative">
                        <label for="examTitle" class="block text-sm font-medium text-gray-700 mb-1">                            
                            <i class="fas fa-book-open mr-2 text-custom"></i>Select Examination
                        </label>                        
                        <div class="relative">
                            <select id="examTitle" 
                                    name="examTitle" 
                                    class="block w-full border-gray-300 focus:ring-custom focus:border-custom !rounded-button appearance-none"
                                    required>                               
                                <option value="">-- Select Exam --</option>
                                <% examTitles.forEach(title => { %>
                                    <option value="<%= title %>"><%= title %></option>
                                <% }); %>
                            </select>
                            </select>
                            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">                                
                                <i class="fas fa-chevron-down"></i>
                            </div>
                        </div>                    
                    </div>

                    <button type="submit" 
                            class="w-full bg-custom hover:bg-indigo-700 text-white font-medium py-2 px-4 !rounded-button transition duration-150 ease-in-out flex items-center justify-center">                       
                             <i class="fas fa-search mr-2"></i>
                        Search Results
                    </button>
                </form>           
             </div>
        </div>

        <div class="mt-8 text-center text-sm text-gray-600">
            <p>Need help? Contact academic support at email</p>        
        </div>
    </main>

</body>
</html>