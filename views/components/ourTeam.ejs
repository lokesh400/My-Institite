<section id="team" class="py-20 bg-gray-50 overflow-hidden">
    <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Meet Our Expert Team</h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                Learn from industry professionals with years of experience
            </p>
        </div>
        <div class="relative w-full overflow-hidden">
            <div id="teamCarousel" class="flex space-x-8 whitespace-nowrap animate-scroll2">
                <!-- Team Member Card (Repeat for more members) -->

                <% for(let i=0;i<team.length;i++){ %>

                    <div class="bg-white rounded-lg shadow-sm p-6 text-center min-w-[250px]">
                        <img src="<%= team[i].imageUrl %>" alt="John Smith" class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"/>
                        <h3 class="text-xl font-semibold text-gray-900 mb-1"><%= team[i].name %></h3>
                        <p class="text-custom font-medium mb-3">Expertise: <%= team[i].study %></p>
                        <p class="text-gray-600 text-sm mb-4"><%= team[i].experience %>+ years of experience <b style="color: red;" ><%= team[i].subject %></b>.</p>
                    </div>

                <%}%>

                

            </div>
        </div>
    </div>
</section>