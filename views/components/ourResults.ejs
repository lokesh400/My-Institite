<div class="max-w-8xl mx-auto px-4 py-16">
        <div class="text-center mb-12">            
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Amazing Results</h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">Discover how our solutions have transformed businesses and delivered exceptional outcomes for our clients worldwide.</p>
        </div>        
        <div class="relative overflow-hidden">
            <div class="scroll-container flex animate-scroll hover:pause space-x-8 py-8">   
                
                <% for(let i=0;i<result.length;i++){ %>
                    <div class="flex-none w-80 bg-white rounded-lg shadow-sm p-6 border border-gray-100">
                        <div class="h-48 bg-gray-100 rounded-lg mb-4 overflow-hidden">                        
                            <img src="<%= result[i].imageUrl %>" class="w-full h-full object-cover" alt="Success story 1">                    
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= result[i].name %></h3>
                        <p class="text-gray-600 mb-4"><%= result[i].exam %></p>
                        <div class="flex items-center text-sm text-gray-500">                        
                            <i class="fas fa-star mr-2"></i>
                            <span><%= result[i].year %></span>
                        </div>                
                    </div>
                <%}%>
                
            </div>
        </div>
    </div>

    

   